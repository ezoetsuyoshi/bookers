<h2>投稿一覧</h2>

<table>
	<tr>
		<th>本の名前</th><br>
		<th>感想</th>
	</tr>
	<% @books.each do |book| %>
	<tr>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		<th><%= link_to "表示", book_path(book.id) %></th>
		<th><%= link_to "編集", edit_book_path(book.id) %></th>
		<th><%= link_to "削除", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></th>
	</tr>
	<% end %>
	
</table>

<h3>新しく本の感想を投稿する</h3>

<%= form_for(@book) do |f| %>

<h4>本の名前</h4>
<%= f.text_field :title %>

<h4>感想</h4>
<%= f.text_area :body %>

<%= f.submit "投稿" %>

<% end %>
